&GLOBAL
  PROJECT  MoS2
  PRINT_LEVEL MEDIUM
  RUN_TYPE ENERGY
  &TIMINGS
     THRESHOLD 0.0001
  &END
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME  BASIS_MOLOPT_UZH
    BASIS_SET_FILE_NAME  BASIS_PERIODIC_GW
    SORT_BASIS EXP
    POTENTIAL_FILE_NAME  POTENTIAL_UZH
    CHARGE 0
    &MGRID
      CUTOFF  500
      REL_CUTOFF  100
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-12
      EPS_PGF_ORB 1.0E-12
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-9
      MAX_SCF 100
      &PRINT
        &RESTART ON
        &END
      &END
      ADDED_MOS -1
      &MIXING
          METHOD BROYDEN_MIXING
          ALPHA 0.1
          BETA 1.5
          NBROYDEN 8
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
    &KPOINTS
      SCHEME MONKHORST-PACK 32 32 1
      PARALLEL_GROUP_SIZE   -1
    &END KPOINTS
  &END DFT
  &PROPERTIES
    &BANDSTRUCTURE
      &GW
        NUM_TIME_FREQ_POINTS         20
        MEMORY_PER_PROC              64
        EPS_FILTER               1.0E-7
      &END
      &BANDSTRUCTURE_PATH
        NPOINTS 19
        SPECIAL_POINT M     0.333333 0.333333 0.0
        SPECIAL_POINT GAMMA 0.0 0.0 0.0
        SPECIAL_POINT K     0.0 0.5 0.0
      &END
    &END
  &END PROPERTIES
  &SUBSYS
    &CELL
      ABC                 3.186 3.186 20.0
      ALPHA_BETA_GAMMA    90 90 120
        PERIODIC XY
    &END CELL

    &KIND S
      BASIS_SET ORB    TZVP-MOLOPT-PBE-GTH-q6
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PBE-q6
    &END KIND

    &KIND Se
      BASIS_SET ORB    TZVP-MOLOPT-PBE-GTH-q6
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PBE-q6
    &END KIND

    &KIND Mo
      BASIS_SET ORB    TZVP-MOLOPT-PBE-GTH-q14
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PBE-q14
    &END KIND

    &KIND W
      BASIS_SET ORB    TZVP-MOLOPT-PBE-GTH-q14
      BASIS_SET RI_AUX RI
      POTENTIAL        GTH-PBE-q14
    &END KIND

    &COORD
W        0.00000000       0.00000000       9.07279744
S        1.59297297       0.91970338      10.64559488
S        1.59297297       0.91970338       7.50000000
    &END COORD
  &END SUBSYS
&END FORCE_EVAL
